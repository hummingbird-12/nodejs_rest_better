<div class="container">
    <div class="card text-center" style="width: 400px; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <div class="card-body">
            <h2 class="card-title"><b>Welcome</b></h2>
            <hr style="height: 2px; width: 175px; color: grey; background-color: grey">
            <form style="margin-bottom: 10px;" action="/login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Login</button>
            </form>
            <a href="<%- link %>" class="btn btn-primary btn-lg" role="button" aria-disabled="true" style="background-color: gray; border-color: darkgray;">Login with GitHub</a>
        </div>
    </div>
</div>


